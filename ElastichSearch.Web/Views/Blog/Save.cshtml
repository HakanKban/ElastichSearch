@using ElastichSearch.Web.ViewModel;
@{
    ViewData["Title"] = "Save";
}
@model BlogCreateViewModel
<div class="col-md-6 offset-md-3">
    @if (TempData["result"] != null)
    {
      <div class="alert alert-info">
          @TempData["result"]
      </div>    
    }
    <h2>Blog Create</h2>
    <form asp-action="Save">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Blog Title</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Content" class="form-label">Example textarea</label>
            <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        </div>  
        <div class="mb-3">
            <label asp-for="Tags" class="form-label">Example textarea</label>
            <textarea asp-for="Tags" class="form-control" rows="3"></textarea>
        </div> 
        <div class="mb-3">
            <button type="submit">Save</button>
        </div>
    </form>
</div>


